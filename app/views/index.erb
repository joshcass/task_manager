<h2>All Tasks</h2>

<% @tasks.each do |task| %>
  <h4 id="task"><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h4>
  <a href="/tasks/<%= task.id %>/edit">Edit</a>
  <form action="/tasks/<%= task.id %>" method="POST">
    <input type="hidden" value="DELETE" name="_method">
    <input type="submit" value="Delete!">
  </form>
<% end %>
